{% extends 'base.html.twig' %}

{% block title %}Liste des articles!{% endblock %}

{% block body %}

    {{ addition(1,2) }}
    <h1>Liste des articles {% if brouillon %}brouillons{% endif %}</h1>

    <ul>
    {% for article in articles %}
        <li><a href="{{ path('vue_article', { 'id':article.id }) }}">{{ article.titre }}</a></li>
    {% endfor %}
    </ul>
    

{% endblock %}
