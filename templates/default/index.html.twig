{% extends 'base.html.twig' %}

{% block title %}Liste des articles!{% endblock %}

{% block body %}

    <!-- {{ addition(1,2) }} -->
    <h1>Les derniers articles {% if brouillon %}brouillons{% endif %}</h1>

    <div class="card">
    {% for article in articles %}
        <div class="card-body">
                <h5 class="card-title">{{ article.titre }}</h5>
                <p class="card-text">{{ article.contenu }}</p>
                <p class="card-subtitle mb-2 text-muted">{{ article.dateCreation|date("d/m/Y") }}</p>
                <button type="button" class="btn btn-primary">
                    <a href="{{ path('vue_article', { 'id':article.id }) }}" class="card-link">Lire la suite</a>
                </button>
        </div>
    {% endfor %}
    </div>
    

{% endblock %}
